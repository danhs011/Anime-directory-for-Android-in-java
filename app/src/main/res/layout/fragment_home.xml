<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgSearchHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_baseline_search" />

            <LinearLayout
                android:id="@+id/layoutBotones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnAnimeHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ANIME" />

                <Button
                    android:id="@+id/btnMangaHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MANGA" />

            </LinearLayout>

            <ImageView
                android:id="@+id/aleatorio1ImgHome"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/txtAnimAccionHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Animes de accion"
                android:textSize="20dp"
                android:paddingTop="20dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/accionRecyclerHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/txtAnimAventuraHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Animes de aventura"
                android:textSize="20dp"
                android:paddingTop="20dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/aventuraRecyclerHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/txtAnimComediaHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Animes de comedia"
                android:textSize="20dp"
                android:paddingTop="20dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/comediaRecyclerHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>

            <ImageView
                android:id="@+id/aleatorio2ImgHome"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/ic_launcher_background"
                android:paddingTop="15dp"/>

            <TextView
                android:id="@+id/txtAnimDramaHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Animes de drama"
                android:textSize="20dp"
                android:paddingTop="20dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dramaRecyclerHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/txtAnimMisterioHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Animes de misterio"
                android:textSize="20dp"
                android:paddingTop="20dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/misterioRecyclerHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/txtAnimMechasHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Animes de mechas"
                android:textSize="20dp"
                android:paddingTop="20dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mechasRecyclerHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/txtAnimDeportesHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Animes de deportes"
                android:textSize="20dp"
                android:paddingTop="20dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/deportesRecyclerHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/txtAnimRomanceHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Animes de romance"
                android:textSize="20dp"
                android:paddingTop="20dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/romanceRecyclerHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/txtAnimFiccionHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Animes de ciencia ficcion"
                android:textSize="20dp"
                android:paddingTop="20dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cienciaFiccionRecyclerHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>